	cd ..
	wget https://pypi.python.org/packages/source/p/pip/pip-1.5.6.tar.gz
	tar -vzxf pip-1.5.6.tar.gz
	cd pip-1.5.6
	python setup.py install
	cd ..
	deactivate
	source ./myvenv/bin/activate
